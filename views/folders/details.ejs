<%- include('../partials/head.ejs') %>

    <body class="min-vh-100 row flex-column justify-content-between m-0">
        <%- include('../partials/header.ejs') %>
            <div class="flex-grow-1 p-3">
                <div class="folder-header">
                    <a class="btn btn-outline-info" href="/folders"><i class="bi bi-arrow-left-square"></i></a>
                    <div class="d-flex align-items-center justify-content-between mt-3">
                        <h1>ðŸ“‚
                            <%= title %>
                        </h1>
                    </div>
                    <div>
                    </div>
                </div>
                    <form class="mt-3" action="/files/create" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="folderId" value="<%= folder.id %>">
                        <div class="mb-3">
                            <label for="file" class="form-label">Upload a file</label>
                            <input class="form-control" type="file" id="file" name="file" required>
                            <button class="btn btn-primary mt-2" type="submit">Upload</button>
                        </div>
                    </form>
                <ul>
                    <% if (files.length> 0) { %>
                        <% files.forEach(file=> { %>
                            <li>
                                <a href="/files/<%= folder.id %>/<%= file.id %>">ðŸ’¾
                                    <%= file.originalname %>
                                </a>
                            </li>
                            <% }) %>
                                <% } else { %>
                                    <p>Pas de fichiers</p>
                                    <% } %>
                </ul>
                <div class="d-flex gap-2 justify-content-end">
                    <a class="btn btn-primary" href="/folders/<%= folder.id %>/edit"><i class="bi bi-pen"></i></a>
                    <form action="/folders/<%= folder.id %>" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure')"><i
                                class="bi bi-trash"></i></button>
                    </form>
                </div>
            </div>
            <%- include('../partials/footer') %>
    </body>

    </html>