<header class="p-3 border-bottom">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-between">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
                <h1>⬆️FU</h1>
            </a>
            <ul class="nav nav-pills">

                <li class="nav-item">
                    <a href="/" class="nav-link px-2 <%= page_name === 'home' ? 'active' : "" %>">Home
                    </a>
                </li>
                <% if (locals.user) { %>
                    <li class="nav-item">
                        <a href="/folders" class="nav-link px-2 <%= page_name === 'folders' ? 'active' : "" %>">Folders
                        </a>
                    </li>
                    <% } %>
            </ul>
            <div class="d-flex align-items-center">
                <% if (locals.user) { %>
                    <div class="dropdown text-end"> <a href="#"
                            class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
                            data-bs-toggle="dropdown" aria-expanded="false"> <img src="https://github.com/mdo.png"
                                alt="mdo" width="32" height="32" class="rounded-circle"> </a>
                        <ul class="dropdown-menu text-small">
                            <li class="dropdown-item">
                                <%= locals.user.email.slice(0, 6) %>
                            </li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="/logout">Log out</a></li>
                        </ul>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>
</header>